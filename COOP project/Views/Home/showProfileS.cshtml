@model COOP_project.Models.Student

<section class="pb-1">
    <div class="bg-white border rounded-1">

        <section class="w-30 px-1 py-1" style="background-color: #f4f5f7; border-radius: .5rem .5rem 0 0;">
            <style>
                .gradient-custom {
                    /* fallback for old browsers */
                    background: #f6d365;
                    /* Chrome 10-25, Safari 5.1-6 */
                    background: -webkit-linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1));
                    /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
                    background: linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))
                }
            </style>
            <div class="row d-flex justify-content-center">
                <div class="col col-lg-7 mb-4 mb-lg-0">
                    <div class="card" style="border-radius: .5rem;">
                        <div class="row g-0">
                            <div class="col-md-4 gradient-custom text-center text-white" style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                <br />
                                <br />
                                <br />
                                <br />

                                <br />
                                <br />
                                <br />
                                <h1> <i class="bi bi-person"></i></h1>
                                <p></p>

                            </div>
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h6>Information</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Email</h6>
                                            <p class="text-muted">  @Html.DisplayFor(model => model.Email)</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Phone</h6>
                                            <p class="text-muted"> @Html.DisplayFor(model => model.Phone)</p>
                                        </div>
                                    </div>
                                    

                                    

                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>User name</h6>
                                            <p class="text-muted">  @Html.DisplayFor(model => model.user_Name)</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Sudent Major</h6>
                                            <p class="text-muted">  @Html.DisplayFor(model => model.Major.majorName)</p>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>






    </div>
</section>