@model COOP_project.Models.Order

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkId" class="control-label"></label>
                <select asp-for="WorkId" class="form-control" asp-items="ViewBag.WorkId"></select>
                <span asp-validation-for="WorkId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            
            @if(Model.isSigned)
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input type="radio" value="signed" name="radio" class="form-check-input" asp-for="isSigned" checked/> @Html.DisplayNameFor(model => model.isSigned)
                    </label>
                </div>
            }
            else
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input type="radio" value="signed" name="radio" class="form-check-input" asp-for="isSigned" /> @Html.DisplayNameFor(model => model.isSigned)
                    </label>
                </div>
            }
           
            @if(Model.isRejected)
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input type="radio" value="Reject" name="radio" class="form-check-input" asp-for="isRejected" checked/> @Html.DisplayNameFor(model => model.isRejected)
                    </label>
                </div>
            }
            else
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input type="radio" value="Reject" name="radio" class="form-check-input" asp-for="isRejected" /> @Html.DisplayNameFor(model => model.isRejected)
                    </label>
                </div>
            }
            

            @if (Model.isAccepted)
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input type="radio" value="Accept" name="radio" class="form-check-input" asp-for="isAccepted" checked /> @Html.DisplayNameFor(model => model.isAccepted)
                    </label>
                </div>
            }
            else
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input type="radio" value="Accept" name="radio" class="form-check-input" asp-for="isAccepted" /> @Html.DisplayNameFor(model => model.isAccepted)
                    </label>
                </div>
            }
           
            @if(Model.isDone)
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input type="radio" value="Done" name="radio" class="form-check-input" asp-for="isDone" checked/> @Html.DisplayNameFor(model => model.isDone)
                    </label>
                </div>
            }
            else
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input type="radio" value="Done" name="radio" class="form-check-input" asp-for="isDone" /> @Html.DisplayNameFor(model => model.isDone)
                    </label>
                </div>
            }
            

           
            <div class="form-group">
                <input type="submit" value="Save" name="radio" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>|
    <a asp-controller="Users" asp-action="adminPage">Back to Admin Dashboard</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
